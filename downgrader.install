post_install() {
	echo ">> Now, for correct work I will backup your pacman log file to /var/log/pacman.log.old"
	mv /var/log/pacman.log /var/log/pacman.log.old
	touch /var/log/pacman.log
}
post_upgrade() {
	echo ">> Now, for correct work I will backup your pacman log file to /var/log/pacman.log.old"
	mv /var/log/pacman.log /var/log/pacman.log.old
	touch /var/log/pacman.log
}
